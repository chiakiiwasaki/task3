<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Create Group</h1>
        <%= form_with(model: @group, local: true) do |f| %>
          <div class="form-group">
            <%= f.label 'グループ名' %>
            <%= f.text_field :name, class: 'form-control group_name' %>
          </div>
          <div>
            <%= f.label '紹介文' %>
            <%= f.text_area :introduction, class: 'form-control group_introduction' %>
          </div>
          <br>
          <div class="form-group">
            <%= f.label 'グループ画像' %>
            <%= f.attachment_field :image, class: "form-control-file group_image" %>
          </div>
          <div>
            <%= f.submit 'Create Group', class: 'btn btn-info' %>
          </div>
        <% end %>
    </div>
  </div>
</div>