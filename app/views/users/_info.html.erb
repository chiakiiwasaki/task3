<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><a href="<%= following_user_path(user) %>"><%= user.following.count %></a></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><a href="<%= followers_user_path(user) %>"><%= user.followers.count %></a></th>
  </tr>
</table>

<div class='row'>
  <% if user == current_user %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% else %>
    <div id="follow_form">
    <% if current_user.following?(@user) %>
      <%= form_with(model: current_user.active_relationships.find_by(followed_id: @user.id), html: { method: :delete }, local: true) do |f| %>
        <%= f.submit "フォロー外す", class: "btn btn-info" %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.active_relationships.build, local: true) do |f| %>
        <div><%= hidden_field_tag :followed_id, @user.id %></div>
        <%= f.submit "フォローする", class: "btn btn-success" %>
      <% end %>
    <% end %>
    </div>
  <% end %>
</div>